function MENU_StartCredits():
	StopSound(MENU_music):play music MENU_creditsmusic
	MENU_state="none"
	MENU_credits_Y=0
	Credits_FadeIn()
endfunction

function Credits_FadeIn():
	MENU_FaderAlpha=0
	MENU_FaderSpeed=2
	MENU_FaderTarget="credits"
endfunction

function Fader_Update():
	MENU_FaderAlpha=MENU_FaderAlpha+(MENU_FaderSpeed*SyS_TimeFactor)
	if MENU_FaderAlpha>255:
		if MENU_FaderSpeed>0:
			SyS_LoopMode=MENU_FaderTarget
			if MENU_FaderTarget="menu" then Credits_FadeTo()
			MENU_FaderAlpha=255
			MENU_FaderSpeed=-2
		endif
	else:
		if MENU_FaderAlpha<0:
			if MENU_FaderSpeed<0:
				SyS_LoopMode=MENU_FaderTarget
				MENU_FaderSpeed=0
				MENU_FaderAlpha=0
			endif			
		else:
			set sprite alpha MENU_creditsFader,MENU_FaderAlpha
		endif
	endif
endfunction

function UI_TyperInit():
	global UI_TyperTime as float
	global UI_TyperStarted
	global UI_TyperFinished 
	global UI_TyperLetter
	UI_TyperLetter=0
endfunction

function UI_Typer(text$,x,y,time):
	UI_TyperTime=UI_TyperTime+(0.1*SyS_TimeFactor)
	timeperstring#=(time*1.0)/len(text$)
	if UI_TyperTime>timeperstring#:
		UI_TyperTime=0
		UI_TyperLetter=UI_TyperLetter+1
	endif
	scrstring$=left$(text$,UI_TyperLetter)
	if scrstring$=text$ then UI_TyperFinished=1
	UI_Text(3,x,y,scrstring$)
endfunction

function UI_TyperReset():
	UI_TyperTime=0
	UI_TyperStarted=0
	UI_TyperFinished=0
	UI_TyperLetter=0
endfunction

function Credits_FadeOut():
	MENU_FaderSpeed=2
	MENU_FaderTarget="menu"
endfunction

function Credits_FadeTo():
	MENU_FaderSpeed=-2
	MENU_FaderTarget="menu"
	MENU_state="NONE"
endfunction

function MENU_Hide():
