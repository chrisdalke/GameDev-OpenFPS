function IMG_SET_PIXEL2(memblock as byte, x as integer, y as integer, width as integer, height as integer, colour as dword)
	if x>-1 and x<width
		if y>-1 and y<height
			n as double integer
			n = (4*((y*width)+x))+12
			write memblock dword memblock,n,colour
		endif
	endif
endfunction 


