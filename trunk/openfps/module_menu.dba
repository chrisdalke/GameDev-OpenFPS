function MENU_update()
	// -----------------------
	// Update function
	// -----------------------
	
	`handle loop startup
	if MENU_LoopStartup>0:
		MENU_Show()
		MENU_LoopStartup=0
	endif
	
	`paste backdrop
	paste image MENU_buttons_image,168-(178/2),(UI_Display.Height*0.3)-25,1
	if UI_Display.Height>600 then paste image MENU_menusubimage,0,0,1
	`handle buttons
	MENU_CreateButtons()
	
	If mouseclick()=1 and MENU_MouseClicked=0
		Select UI_MouseOveredGadget$
			case "button_lobby"
				MENU_state="LOBBY"
			endcase
		 	case "button_campaign"
		 		MENU_state="CAMPAIGN"
		 	endcase
			case "button_training"
				MENU_state="TRAINING"
			endcase
			case "button_credits"
				MENU_StartCredits()
			endcase
			case "button_startgame"
				MENU_StartCampaign()
			endcase
			case "button_options"
				MENU_state="OPTIONS"
			endcase
		 	case "button_quit"
		 		MENU_state="QUIT"
		 	endcase
		 	case "button_yesquit"
		 		SyS_Event_Terminate=1
		 	endcase
		 	case "button_backtomain"
		 		MENU_state="NONE"
		 	endcase
		 	case "button_yestrain"
     		    MENU_state="HIDDEN"
       			LVL_Load("media\maps\Test\level.dat")
	    	endcase
	    	`game options buttons
	    	case "tickbox_test"
	    		UI_ToggleGadget("tickbox_test")
				UI_PlayMouseClickSND()
				tickbox_select=UI_GetGadgetSelection("tickbox_test")
	    	endcase
		endselect
	endif
	
	`handle loading fade
	if sprite alpha(NetConnectSprite)>10:
		set sprite alpha NetConnectSprite,sprite alpha(NetConnectSprite)-10
	else
		hide sprite NetConnectSprite
	endif
	
	`scroll background texture
	scroll object texture MENU_BackgroundObject,0.0005*SyS_TimeFactor,0
	scroll object texture MENU_BackgroundObject2,0.0001*SyS_TimeFactor,0
	
	texture object MENU_FGObject,MENU_ForegroundImage
			
	`debug
	if CORE_DebugScreen=1:
		X=UI_MouseX()+16:Y=UI_MouseY()
		UI_Text(1,X,Y,"Debug Mode====="):Y=Y+18
		UI_Text(1,X,Y,"Screen rate "+str$(screen fps())):Y=Y+18
		UI_Text(1,X,Y,"TimeFactor#="+str$(SyS_TimeFactor)):Y=Y+18
		UI_Text(1,X,Y,"MENU_stateDEBUG="+MENU_stateDEBUG):Y=Y+18
		UI_Text(1,X,Y,"UI_Mouseclicked="+str$(UI_Mouseclicked)):Y=Y+18
	endif
	
	if KEYSTATE(20)=1:
		UI_Typer("TEXT TYPING TEST...",300,300,10)
	else:
		UI_TyperReset()
	endif
	
	MENU_MouseClicked=mouseclick()
	
endfunction

